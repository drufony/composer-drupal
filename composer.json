        "espend/drupal-packagist": "dev-master",
        "kriswallsmith/buzz": "dev-master"
    },
    "autoload": {
      "psr-0": {
        "": "src/"
      }
    },
    "extra": {
        "class": "winmillwill\\Composer\\Drupal\\Plugin"
    },
    "authors": [
        {
            "name": "Will Milton",
